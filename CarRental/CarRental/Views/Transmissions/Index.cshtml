@model IEnumerable<CarRental.Models.Transmission>

@{
    ViewData["Title"] = "Transmissions";
}

<h1>Transmissions</h1>

<div class="text-right">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-primary">
                <td class="blockquote">
                @Html.DisplayFor(modelItem => item.TransmissionId)
                @Html.DisplayFor(modelItem => item.TransmissionType)
            </td>
            <td>
                <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@item.TransmissionId" class="btn btn-primary">Edit</a> 
                <a asp-action="Delete" asp-route-id="@item.TransmissionId" class="btn btn-danger">Delete</a>
            </div>
            </td>
        </tr>
}
    </tbody>
</table>
