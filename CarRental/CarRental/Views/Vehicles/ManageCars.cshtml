@model IEnumerable<CarRental.Models.Vehicle>

@{
    ViewData["Title"] = "ManageCars";
}

<h1>Manage Cars</h1>

<style>
    
    tbody tr:hover{
        background-color:#ffff99;
        
    }
    
    td{
        padding:10px 0;
    }
    tr{
        text-align:center;
    }
</style>

<div class="button-container">
    <a class="btn btn-primary " asp-area="" asp-controller="Vehicles" asp-action="Create">Add Car</a>
 </div>
<table class="table">
 <thead >
<tr>
<th>
@Html.DisplayNameFor(model => model.Image)
</th>
<th>
@Html.DisplayNameFor(model => model.Name)
</th>
<th>
@Html.DisplayNameFor(model => model.Seats)
</th>
<th>
@Html.DisplayNameFor(model => model.Year)
</th>
<th>
@Html.DisplayNameFor(model => model.DailyPrice)
</th>
<th>
@Html.DisplayNameFor(model => model.VehicleType)
</th>
<th>
@Html.DisplayNameFor(model => model.BodyType)
</th>
<th>
@Html.DisplayNameFor(model => model.Transmission)
</th>
<th>
@Html.DisplayNameFor(model => model.Fuel)
</th>
<th>
@Html.DisplayNameFor(model => model.TypeOfDriving)
</th>
<th></th>
</tr>
</thead>
<tbody>
@foreach (var item in Model) {
<tr>
<td>
<img src="@item.Image" style="height:100px;width:100px;" />
</td>
<td>
@Html.DisplayFor(modelItem => item.Name)
</td>
<td>
@Html.DisplayFor(modelItem => item.Seats)
</td>
<td>
@Html.DisplayFor(modelItem => item.Year)
</td>
<td>
@Html.DisplayFor(modelItem => item.DailyPrice)
</td>
<td>
@Html.DisplayFor(modelItem => item.VehicleType.VehicleTypeName)
</td>
<td>
@Html.DisplayFor(modelItem => item.BodyType.Body)
</td>
<td>
@Html.DisplayFor(modelItem => item.Transmission.TransmissionType)
</td>
<td>
@Html.DisplayFor(modelItem => item.Fuel.FuelType)
</td>
<td>
@Html.DisplayFor(modelItem => item.TypeOfDriving.TypeDrive)
</td>
<td>
<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.VehicleId">Edit</a> 
<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.VehicleId">Delete</a>
</td>
</tr>
}
</tbody>
</table>